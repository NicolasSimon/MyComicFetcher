<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/lightRedBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="@string/text_browse_by_number"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:id="@+id/textByNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvComicNumberResult"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/title_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <simon.nicolas.comicfetcher.view.ComicFetcherLayout
        android:layout_below="@id/textByNumber"
        android:layout_above="@id/tvComicNumberResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>