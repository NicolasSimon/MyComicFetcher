<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/lightGreenBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <simon.nicolas.comicfetcher.view.ComicButton
        android:text="@string/button_get_comic_of_the_day"
        android:id="@+id/buttonComicOfTheDay"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tvComicOfDayResult"
        android:gravity="center"
        android:textSize="@dimen/text_size"
        android:layout_above="@id/buttonComicOfTheDay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>